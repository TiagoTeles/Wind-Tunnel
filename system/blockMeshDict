FoamFile
{
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1.0;

vertices
(
    (0 0 0)    // vertex number 0
    (8 0 0)    // vertex number 1
    (8 3 0)    // vertex number 2
    (0 3 0)    // vertex number 3
    (0 0 5)    // vertex number 4
    (8 0 5)    // vertex number 5
    (8 3 5)    // vertex number 6
    (0 3 5)    // vertex number 7
);

blocks
(
    hex (0 1 2 3 4 5 6 7)    // vertex numbers
    (40 15 25)               // numbers of cells in each direction 
    simpleGrading (1 1 1)    // cell expansion ratios
);

boundary
(
    inlet
    {
        type patch;
        faces ((0 4 7 3));
    }

    outlet
    {
        type patch;
        faces ((1 2 6 5));
    }

    top
    {
        type wall;
        faces ((4 5 6 7));
    }

    bottom
    {
        type wall;
        faces ((0 3 2 1));
    }

    front
    {
        type wall;
        faces ((1 5 4 0));
    }

    back
    {
        type wall;
        faces ((3 7 6 2));
    }
);


